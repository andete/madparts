import sys, os
import main.madparts

usage = """
Usage:
  %s <footprint_file>
  %s import <library>
"""

if __name__ == '__main__':
    # trick needed to make OpenGL work on win32
    from ctypes import util
    try:
      from OpenGL.platform import win32
    except AttributeError:
      pass

    # if there is a file called 'Makefile' in the same directory
    # as this script, we're running from the development tree
    dirname = os.path.dirname(os.path.abspath(sys.argv[0]))
    in_dev_tree = os.path.exists(os.path.join(dirname, 'Makefile'))
    if in_dev_tree:
      print "in dev tree"
      data_dir = dirname
    else:
      data_dir = os.path.join(sys.prefix, 'share', 'madparts')
      sys.path.append(data_dir)
    os.environ['DATA_DIR'] = data_dir

    if len(sys.argv) not in [2,3]:
      sys.stderr.write(usage % (sys.argv[0], sys.argv[0]))
      sys.exit(1)

    if sys.argv[1] == 'import':
      if len(sys.argv) != 3:
        sys.stderr.write(usage % (sys.argv[0], sys.argv[0]))
        sys.exit(1)
      sys.exit(main.madparts.gui_main(sys.argv[2], do_import=True))
      
    sys.exit(main.madparts.gui_main(sys.argv[1]))
         
